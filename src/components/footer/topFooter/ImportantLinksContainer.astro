---
import { fixedLinks } from '@data/apiData';
---

<ul class='g-top-footer-articles'>
  {
    fixedLinks.map((link) => (
      <li>
        {link.link.includes('http') ? (
          <a
            href={link.link}
            target='_blank'
            rel='noopener noreferrer'
          >
            <h5>{link.name.toUpperCase()}</h5>
          </a>
        ) : (
          <a href={link.link}>
            <h5>{link.name.toUpperCase()}</h5>
          </a>
        )}
      </li>
    ))
  }
</ul>

<style>
  h5 {
    font-weight: var(--fnt-wg-regular);
  }

  .g-top-footer-articles {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 8.0625rem;
  }

  .g-top-footer-articles li {
    padding-bottom: 1.8rem;
  }

  .g-top-footer-articles li:last-child {
    padding-bottom: 0;
  }

  @media (max-width: 965px) {
    h5 {
      font-size: 1.125rem;
    }
  }
</style>
