---
//Import components
import ScrollLine from "@assets/ScrollLine.svelte";
---

<section>
  <img
    class='background-hero'
    src='/history-hero.avif'
    alt='Imatge de fons del Club Bàsquet Granollers jugant contra el Real Madrid de bàsquet amb el pavelló ple.'
  />
  <div class="desktop">
    <h2 class="hero-title">VIATJA A TRAVÉS<br> DE LA NOSTRA HISTÒRIA</h2>
  </div>
  <div class="responsive">
     <h2 class="hero-title">VIATJA <br>A TRAVÉS DE <br> LA NOSTRA HISTÒRIA</h2>
  </div>
  <p>Comença aquí, fent scroll</p>
  <div class='scroll-line'>
    <ScrollLine client:only/>
  </div>
</section>

<style>
  .responsive {
    display: none;
  }
  section {
    height: calc(100vh + var(--hg-header));
    scroll-snap-align: start;
    margin-top: calc(var(--hg-header) * -1);
    overflow: hidden;
  }
  
  .hero-title {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--color-contrast);
    font-size: 3.75rem;
    font-weight: var(--fnt-wg-medium);
    text-align: center;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    line-height: 4.0625rem;
  }

  .background-hero {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: bottom;
  }
  p {
    position: absolute;
    bottom: 11.25rem;
    left: 50%;
    transform: translateX(-50%);
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    font-size: 1rem;
  }
  .scroll-line {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    animation: scroll 1s infinite;
  }

  @media (max-width: 648px) {
    .hero-title {
      line-height: 2.8125rem;
      font-size: 2.5rem;
    }

    .desktop {
      display: none;
    }

    .responsive {
      display: block;
    }
    p {
      font-size: 0.875rem;
      width: 100%;
      text-align: center;
    }
  }
</style>
