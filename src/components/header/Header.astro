---
import HeaderResponsive from './HeaderResponsive.svelte';

const headerSponsors = [{url: `https://cbgranollers.cat/`, src: '/cbg-logo.svg', alt: 'Logo del Club Bàsquet Granolelrs'}, {url: `https://finquesvallbona.com/` , src: '/finques-vallbona-logo.svg', alt: 'Logo de Finques Ballbona'},{url: `https://www.granollers.cat/`, src: '/ajuntament-granollers-logo.svg', alt: "Logo de l'ajuntament de Granollers"} ]
---

<header>
  <section>
    <div class='desktop'>
      <a
        class='logo'
        href='/'
        ><img
        src='/cbg-history-logo.svg'
        alt='Logo de la història del Club Bàsquet Granollers'
        /></a
        >
        <ul class='sponsors-container'>
          {headerSponsors.map((sponsor) => (
            <li>
              <a href={sponsor.url} target='_blank'
                rel='noopener noreferrer'>
                
              <img src={sponsor.src} alt={sponsor.alt} />
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div class='responsive'>
      <HeaderResponsive client:load />
    </div>
  </section>
</header>

<style>
  header {
    position: sticky;
    display: flex;
    flex-direction: column;
    top: 0;
    z-index: 10;
    height: var(--hg-header);
    background-color: var(--clr-contrast);
    background-color: rgba(243, 243, 243, 0.9);
  }

  header:after {
    content: '';
    position: absolute;
    bottom: calc(
      -1 * var(--hg-separator-line)
    ); /* move it outside the header */
    height: var(--hg-separator-line);
    width: 100%;
    background: linear-gradient(
      90deg,
      var(--clr-accent) 35.36%,
      var(--clr-primary) 68.89%
    );
  }
  .responsive {
    display: none;
  }
  .logo {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: var(--pd-x);
  }

  .sponsors-container {
     position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: var(--pd-x);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 2.16rem;
  }
  @media (max-width: 1258px) {
    header:after {
      bottom: calc(-1 * var(--hg-separator-line-responsive));
      height: var(--hg-separator-line-responsive);
    }

    .desktop {
      display: none;
      padding-inline: var(--pd-x);
    }

    .responsive {
      display: block;
    }
  }
  @media (max-width: 1065px) {
    .responsive {
      padding-inline: var(--pd-x-medium);
    }
  }

  @media (max-width: 648px) {
    .responsive {
      padding-inline: var(--pd-x-small);
    }
  }
</style>
