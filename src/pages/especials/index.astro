---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getSeasonsCount } from "@data/seasonsCount";
import EspecialsItem from "@components/EspecialsItem.astro";
import { getEspecials } from "@data/especials";
import { slugify } from "@utils/helperFunctions";

const especials = await getEspecials();
const { listOfSeasons } = getSeasonsCount();


---

<BaseLayout {listOfSeasons}>
  <section>
    <div class="headings-container">
      <h1>Especials</h1>
      <h2>Articles especials</h2>
    </div>
    <div class="especials-container">
      {especials.map((especial)=> {
        return <EspecialsItem title={especial.title} author={especial.author} href={`especials/${slugify(especial.title)}`} />
      })}
    </div>
  </section>
</BaseLayout>

<style>
  .especials-container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }
  section {
    /* height: calc(100vh - var(--hg-header)); */
    margin-top: calc(var(--hg-header) + var(--hg-separator-line));

    /* padding-inline: var(--pd-x); */
    /* padding-block: 2.5rem; */
    max-width: 1308px;
    margin-inline: auto;
  }

  .headings-container {
    display: flex;
    flex-direction: column;
    padding-block: var(--pd-y-medium);
    gap: 3rem;
  }

  h1 {
    color: var(--clr-primary);
    font-size: var(--fnt-sz-h1);
    font-weight: var(--fnt-wg-medium);
  }

  h2 {
    color: var(--clr-accent);
  }

  @media (max-width: 1025px) {
    h1 {
      font-size: 1.625rem;
      line-height: 2rem;
    }

    h2 {
      font-size: 1.375rem;
    }

    .headings-container {
      gap: 0.75rem;
      padding-bottom: var(--pd-y-medium);
    }
  }

  @media (max-width: 648px) {
    .headings-container {
      gap: 0.75rem;
      padding-bottom: var(--pd-y-small);
    }
  }
</style>
