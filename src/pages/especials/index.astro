---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getSeasonsCount } from "@data/seasonsCount";
import EspecialsItem from "@components/EspecialsItem.astro";

const { listOfSeasons } = getSeasonsCount();
---

<BaseLayout {listOfSeasons}>
  <section>
    <div class="headings-container">
      <h1>Especials</h1>
      <h2>Articles especials</h2>
    </div>
    <div class="especials-container">
      <EspecialsItem title={"Ja tenim pavelló"} author={"Jordi Sanuy Bassa"} />
      <EspecialsItem title={"Venda de la plaça ACB al Girona"} author={"Jordi Sanuy Bassa"} />
      <EspecialsItem title={"Els camps compren la plaça a Unipublic"} author={"Jordi Sanuy Bassa"} />
      <EspecialsItem title={"Liquidació del C.B.Granollers"} author={"Jordi Sanuy Bassa"} />
    </div>
  </section>
</BaseLayout>

<style>
  .especials-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(37.0625rem, 1fr));
    gap: 1.5rem;
  }
  section {
    height: calc(100vh - var(--hg-header));
    margin-top: calc(var(--hg-header));
    overflow: hidden;
    /* padding-inline: var(--pd-x); */
    padding-block: 2.5rem;
    max-width: 1308px;
    margin: auto;
  }

  .headings-container {
    display: flex;
    flex-direction: column;
    padding-block: var(--pd-y-big);
    gap: 3rem;
  }

  h1 {
    color: var(--clr-primary);
    font-size: var(--fnt-sz-h1);
    font-weight: var(--fnt-wg-medium);
  }

  h2 {
    color: var(--clr-accent);
  }

  @media (max-width: 1025px) {
    h1 {
      font-size: 1.625rem;
      line-height: 2rem;
    }

    h2 {
      font-size: 1.375rem;
    }

    .headings-container {
      gap: 0.75rem;
      padding-bottom: var(--pd-y-medium);
    }
  }

  @media (max-width: 648px) {
    .headings-container {
      gap: 0.75rem;
      padding-bottom: var(--pd-y-small);
    }
  }
</style>
