---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getSeasonsCount } from "@data/seasonsCount";
import EspecialsItem from "@components/EspecialsItem.astro";
import { getEspecials } from "@data/especials";


const especials = await getEspecials();

const isProduction = import.meta.env.NODE_ENV === "production";

---

<BaseLayout >
  <section>
    <div class="headings-container">
      <h1>Articles especials</h1>
    </div>
    <div class="especials-container">
      {especials.map((especial)=> {

const slug = isProduction
      ? especial.slug
      : `especials/${especial.slug}`;
        return <EspecialsItem title={especial.title} author={especial.author} href={slug} image={especial.image} />
      })}
    </div>
  </section>
</BaseLayout>

<style>
  section {
    --marginTop: calc(var(--hg-header) + var(--hg-separator-line));
    --hg-headings-container: 6.37rem;
      margin-top: var(--marginTop);

    /* padding-inline: var(--pd-x); */
    /* padding-block: 2.5rem; */
    max-width: 1308px;
    margin-inline: auto;
    padding-inline: var(--pd-x);
  }
  .especials-container {
    /* min-height: calc(100vh - var(--marginTop) - var(--hg-headings-container)); */
  display: flex;
  flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    padding-bottom: 2rem;
   
  }


  .headings-container {
    display: flex;
    flex-direction: column;
    padding-block: 2rem;
    gap: 3rem;
  }

  h1 {
    color: var(--clr-primary);
    font-size: 1.625rem;
    font-weight: var(--fnt-wg-medium);
    color: var(--clr-accent);
    text-align: center;
  }


  @media (max-width: 1411px) {
    .headings-container {
      padding-inline: var(--pd-x);
    }
  }
  @media (max-width: 1025px) {
    section {
      padding-inline: var(--pd-x-medium);
    }
    h1 {
      font-size: 1.625rem;
      line-height: 2rem;
    }

    h2 {
      font-size: 1.375rem;
    }

    .headings-container {
      gap: 0.75rem;
      padding-bottom: var(--pd-y-medium);
      padding-inline: var(--pd-x);

    }
  }

  @media (max-width: 648px) {
    section {
      padding-inline: var(--pd-x-small);
      margin-top: 0rem;
    }
    .headings-container {
      gap: 0.75rem;
      padding-bottom: var(--pd-y-small);
      padding-inline: var(--pd-x);

    }

    .especials-container {
      gap: 2rem;
    }
  }
</style>
